{
    "compilerOptions": {
        "target": "ES6", 
        "module": "CommonJS", 
        "outDir": "./dist", 
        "rootDir": "./src", 
        "baseUrl": "./src", 
        "paths": {
            "*": ["*"]
        }, 
        "strict": true, 
        "esModuleInterop": true, 
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }, 
    "include": ["src"],
    "exclude": ["node_modules"]
}